-# frozen_string_literal: true
= simple_form_for(@training) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :date, start_year: Date.today.year - 10,
                    end_year: Date.today.year + 10,
                    use_short_month: true,
                    order: [:day, :month, :year]
    %h3 Exercises
    = f.simple_fields_for :exercises do |exercise|
      = render 'exercise_fields', f: exercise
    .col-sm-4.offset-sm-4.btn.btn-primary.btn-block
      = link_to_add_association 'add exercise', f, :exercises, class: "button-text"
  .form-actions.btn.btn-success.btn-block
    = f.button :submit, class: "button-text"
